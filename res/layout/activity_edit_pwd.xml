<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.patr.radix.ui.view.TitleBarView
        android:id="@+id/edit_pwd_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/old_pwd_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/old_pwd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_password" />

            <TextView
                android:id="@+id/old_pwd_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/old_pwd_iv"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="旧密码"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/old_pwd_et_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_display" />

            <EditText
                android:id="@+id/old_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/old_pwd_et_iv"
                android:layout_toRightOf="@id/old_pwd_label"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_pwd_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/new_pwd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_password" />

            <TextView
                android:id="@+id/new_pwd_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/new_pwd_iv"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="新密码"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/new_pwd_et_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_display" />

            <EditText
                android:id="@+id/new_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/new_pwd_et_iv"
                android:layout_toRightOf="@id/new_pwd_label"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_pwd_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/re_pwd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_password" />

            <TextView
                android:id="@+id/re_pwd_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/re_pwd_iv"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="确认密码"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/re_pwd_et_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_display" />

            <EditText
                android:id="@+id/re_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/re_pwd_et_iv"
                android:layout_toRightOf="@id/re_pwd_label"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:hint="再次确认密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/submit_btn_bg_selector"
            android:text="提交修改"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>