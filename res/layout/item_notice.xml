<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitem_bg_selector"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/v_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_notice_iv"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_default"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="0dp" >

            <TextView
                android:id="@+id/item_notice_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="TITLE"
                android:textColor="@color/black"
                android:textSize="18sp" />
            
            <TextView
                android:id="@+id/item_notice_content_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:text="content"
                android:textSize="16sp"
                android:textColor="@color/gray_text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="5dp" >
                
                <TextView
                    android:id="@+id/item_notice_from_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="from"
                    android:textSize="14sp"
                    android:textColor="@color/gray_text" />

                <TextView
                    android:id="@+id/item_notice_datetime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="datetime"
                    android:textSize="14sp"
                    android:textColor="@color/gray_text" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>