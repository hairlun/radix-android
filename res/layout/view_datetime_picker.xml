<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/picker_datetime_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/dialog_title_bg"
        android:gravity="center"
        android:textColor="@color/black_text"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="1px"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_line" />

        <com.patr.radix.view.wheelview.WheelView
            android:id="@+id/picker_year"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/picker_year_line_tv"
            android:layout_width="1px"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_line" />

        <com.patr.radix.view.wheelview.WheelView
            android:id="@+id/picker_month"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/picker_month_line_tv"
            android:layout_width="1px"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_line" />

        <com.patr.radix.view.wheelview.WheelView
            android:id="@+id/picker_day"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/picker_day_line_tv"
            android:layout_width="1px"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_line" />

        <com.patr.radix.view.wheelview.WheelView
            android:id="@+id/picker_hour"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/picker_hour_line_tv"
            android:layout_width="1px"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_line" />

        <com.patr.radix.view.wheelview.WheelView
            android:id="@+id/picker_mins"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/picker_mins_line_tv"
            android:layout_width="1px"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_line" />
    </LinearLayout>

</LinearLayout>