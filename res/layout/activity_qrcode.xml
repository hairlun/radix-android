<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    tools:context=".QRCodeActivity" >

    <com.patr.radix.view.TitleBarView
        android:id="@+id/unlock_qrcode_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

		    <ImageView
		        android:id="@+id/unlock_qrcode_iv"
		        android:layout_width="250dp"
		        android:layout_height="250dp"
		        android:layout_marginTop="10dp"
		        android:contentDescription="@string/app_name" />
		    
		    <Button
		        android:id="@+id/unlock_share_btn"
		        android:layout_width="150dp"
		        android:layout_height="150dp"
		        android:layout_marginTop="10dp"
		        android:background="@null"
		        android:drawableTop="@drawable/share"
		        android:contentDescription="@string/app_name"
		        android:text="@string/unlock_share"
		        android:textSize="20sp"
		        android:textColor="@color/black" />
		    
		    <TextView
		        android:id="@+id/unlock_area_pic_tv"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:text="@string/unlock_area_pic"
		        android:textSize="20sp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/unlock_area_pic_iv"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/app_name" />
            
            <Button
                android:id="@+id/unlock_share2_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableTop="@drawable/share"
                android:contentDescription="@string/app_name"
                android:text="@string/unlock_share"
                android:textSize="20sp"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>