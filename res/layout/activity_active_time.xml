<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ActiveTimeActivity" >

    <com.patr.radix.ui.view.TitleBarView
        android:id="@+id/unlock_active_time_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/unlock_start_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/start_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_time" />

            <TextView
                android:id="@+id/start_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/start_iv"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/unlock_start_time"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/start_label"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/unlock_start_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/unlock_end_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/end_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_time" />

            <TextView
                android:id="@+id/end_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/end_iv"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/unlock_end_time"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/end_label"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/unlock_end_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/unlock_name_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/name_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_name" />

            <TextView
                android:id="@+id/name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/name_iv"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name_label"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/name_et_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_input" />

            <EditText
                android:id="@+id/name_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@id/name_et_iv"
                android:layout_toRightOf="@id/name_label"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:hint="请输入拜访者姓名(必填)"
                android:singleLine="true"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/unlock_tel_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_tel" />

            <TextView
                android:id="@+id/tel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/tel_iv"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="电话"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/tel_et_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_input" />

            <EditText
                android:id="@+id/tel_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@id/tel_et_iv"
                android:layout_toRightOf="@id/tel_label"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:singleLine="true"
                android:hint="请输入拜访者电话(可选)"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/unlock_remark_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/remark_et"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:hint="请输入备注(可选)"
                android:inputType="textMultiLine"
                android:layout_marginLeft="90dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:gravity="top|left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/remark_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_remarks" />

            <TextView
                android:id="@+id/remark_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/remark_iv"
                android:paddingTop="12dp"
                android:text="备注"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/unlock_generate_qrcode_btn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/submit_btn_bg_selector"
            android:text="生成二维码"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>