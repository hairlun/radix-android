<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <com.patr.radix.ui.view.TitleBarView
        android:id="@+id/forget_pwd_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/white" >
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/icon_tel"
                android:scaleType="fitCenter" />
            
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="手机号码"
                android:textColor="@color/black"
                android:textSize="15sp" />
            
            <EditText
                android:id="@+id/phone_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:hint="请输入新号码"
                android:inputType="phone"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_text" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/white" >
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/icon_name"
                android:scaleType="fitCenter" />
            
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="账号"
                android:textColor="@color/black"
                android:textSize="15sp" />
            
            <EditText
                android:id="@+id/username_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:hint="请输入账号"
                android:inputType="phone"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_text" />
            
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/new_pwd_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/new_pwd_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_password" />

            <TextView
                android:id="@+id/new_pwd_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/new_pwd_iv"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="新密码"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/new_pwd_et_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_display" />

            <EditText
                android:id="@+id/new_pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/new_pwd_et_iv"
                android:layout_toRightOf="@id/new_pwd_label"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp" />
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="@color/white" >
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/icon_verification_code"
                android:scaleType="fitCenter" />
            
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="15sp" />
            
            <EditText
                android:id="@+id/verification_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                style="?android:attr/textViewStyle"
                android:background="@null"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_text" />
            
            <Button
                android:id="@+id/verify_btn"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/verify_btn_bg_selector"
                android:text="获取验证码"
                android:textColor="#FFEEEEEE"
                android:textSize="15sp" />
            
        </LinearLayout>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/submit_btn_bg_selector"
            android:text="提交修改"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>