<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp" >
        
        <ImageButton
            android:id="@+id/setting_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/bar_icon_set_up"
            android:background="@drawable/titlebar_btn_bg_selector" />
        
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/avatar_iv"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/personal_center_pic_head_portrait" />
    
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/white" />
    
    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="14sp"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/settings_current_community_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg_selector"
        android:clickable="true"
        android:orientation="horizontal" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:background="@null"
            android:src="@drawable/setting_icon04"
            android:scaleType="fitCenter" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:background="@null"
            android:text="@string/settings_community"
            android:textSize="18sp"
            android:textColor="@color/black" />
        
        <TextView
            android:id="@+id/settings_current_community_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:background="@null"
            android:text="@string/settings_community"
            android:textSize="16sp"
            android:textColor="@color/gray_text" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/settings_user_permission_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg_selector"
        android:clickable="true"
        android:orientation="horizontal" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="35dp"
            android:background="@null"
            android:src="@drawable/setting_icon01"
            android:scaleType="fitCenter" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:background="@null"
            android:text="@string/settings_permission"
            android:textSize="18sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_feedback_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_bg_selector"
        android:clickable="true"
        android:orientation="horizontal" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="35dp"
            android:background="@null"
            android:src="@drawable/setting_icon02"
            android:scaleType="fitCenter" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:background="@null"
            android:text="@string/settings_feedback"
            android:textSize="18sp"
            android:textColor="@color/black" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/settings_lock_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_bg_selector"
        android:clickable="true"
        android:orientation="horizontal" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="35dp"
            android:background="@null"
            android:src="@drawable/setting_icon05"
            android:scaleType="fitCenter" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:background="@null"
            android:text="@string/settings_lock"
            android:textSize="18sp"
            android:textColor="@color/black" />
        
        <TextView
            android:id="@+id/settings_lock_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="3dp"
            android:background="@null"
            android:text="(å…³)"
            android:textSize="16sp"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_check_update_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/btn_bg_selector"
        android:clickable="true"
        android:orientation="horizontal" >
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="35dp"
            android:background="@null"
            android:src="@drawable/setting_icon03"
            android:scaleType="fitCenter" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:background="@null"
            android:text="@string/settings_check_update"
            android:textSize="18sp"
            android:textColor="@color/black" />
    </LinearLayout>
    
    <Button
        android:id="@+id/settings_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg_shape_selector"
        android:padding="12dp"
        android:text="@string/settings_logout"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>