<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
            
            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="3dp"
                android:gravity="center"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black" />
            
            <TextView
                android:id="@+id/week_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="3dp"
                android:gravity="center"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/weather_spec" />
            
            <TextView
                android:id="@+id/nongli_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="3dp"
                android:gravity="center"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>
        
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/weather_spec" />
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >
                
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/w0"
                    android:scaleType="fitXY" />
                
                <ImageView
                    android:id="@+id/weather_day_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/w1"
                    android:scaleType="fitXY" />
                
            </RelativeLayout>
            
            <TextView
                android:id="@+id/weather_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="3dp"
                android:gravity="center"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/weather_spec" />
            
            <TextView
                android:id="@+id/wind_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="3dp"
                android:gravity="center"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>
        
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/weather_spec" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp" >
                
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/wnight"
                    android:scaleType="fitXY" />
                
                <ImageView
                    android:id="@+id/weather_night_iv"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/w1"
                    android:scaleType="fitXY" />
                
            </RelativeLayout>
            
            <TextView
                android:id="@+id/weather_night_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="3dp"
                android:gravity="center"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/weather_spec" />
            
            <TextView
                android:id="@+id/wind_night_tv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="3dp"
                android:gravity="center"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />
    
</LinearLayout>
