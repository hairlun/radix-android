<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@null"
    android:gravity="center_vertical" >

    <!-- 标题 -->

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20sp" />

    <!-- 返回 -->

    <ImageButton
        android:id="@+id/titlebar_back_btn"
        android:layout_width="53dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/titlebar_btn_bg_selector"
        android:contentDescription="@string/titlebar_back"
        android:padding="8dp"
        android:src="@drawable/arrow_left"
        android:visibility="visible" />
    
    <Button
        android:id="@+id/titlebar_close_btn"
        android:layout_width="67dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/titlebar_close_btn_bg_selector"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="关闭"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:visibility="gone" />

</RelativeLayout>